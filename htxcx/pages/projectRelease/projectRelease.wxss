.photoBox {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  position: relative;
  background: #fff;
  margin-top: 32rpx;
}

.photoBox1 {
  display: none;
}

.photoBox>image {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

/* 个人照片 */

.photo-box {
  /* padding: 28rpx 40rpx; */
  padding:28rpx 40rpx 28rpx 40rpx;
}

.photo-box .photoTitle {
  font-size: 32rpx;
}
/* 提交发布 */
.tiBtn{
  width: 670rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color:#fff;
  background: #2994E6;
  margin:0 40rpx;
  margin-top:60rpx;
  border-radius: 8rpx;
}
.ziBox input {
  text-align: right;
  font-size: 32rpx;
  font-family: PingFang SC;
}

.msBox .ms_top {
  padding: 20rpx 40rpx;
  background: #eee;
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

.msBox .ms_cen {
  padding: 20rpx 40rpx;
  height: 400rpx;
  background: #fff;
  position: relative;
}

.msBox .ms_cen textarea {
  width: 100%;
  height: 100%;
}

.msBox .ms_cen view {
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(210, 210, 210, 1);
  position: absolute;
  top: 20rpx;
  left: 40rpx;
}

.hide {
  display: none;
}

.show {
  display: block;
}

.fuBox {
  position: fixed;
  width: 100%;
  height: 1000rpx;
  background: #f0f;
  bottom: 0;
}
