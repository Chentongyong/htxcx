.placeholderClass {
  font-size: 32rpx;
  font-family: PingFang SC;
  color: #eee;
}

/* 所在地 */

.picker {
  color: #333;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}

/* 上传照片 */

.Upload {
  width: 100%;
  margin: 0 auto;
