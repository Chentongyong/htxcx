.service_det {
  width: 100%;
  background: #eee;
}

.det_top {
  padding: 40rpx 40rpx 60rpx 40rpx;
  background: #fff;
  margin-bottom: 10rpx;
}

.topBox {
  display: flex;
  justify-content: center;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
}

.det_top image, .hotspot .butBoxs image {
  display: flex;
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}

.det_cen {
  padding: 40rpx 20rpx;
  box-shadow: 0rpx 0rpx 10px #eee;
  margin-top: 20rpx;
}

.det_cen text {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.det_cen .cenBox {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  display: flex;
}

.det_cen .cenBox .text2 {
  display: block;
  width: 75%;
}

.hotspot .butBoxs {
  padding: 0 40rpx;
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
  border-bottom: 2px solid #eee
}

.hotspot .butBoxs text {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.det_cen .cenBox .text1 {
  width: 25%;
  display: block;
  color: #9a9a9a;
}

.hotspot {
  background: #fff;
  font-family:PingFang SC;
  margin-bottom: 80rpx
}

.hot_but {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 40rpx 36rpx 40rpx;
  border-bottom: 2px solid #eee;
}

.hot_but .imgs1 {
  width: 30%;
  height: 160rpx;
}

.hot_but .butBox {
  width: 70%;
}

.hot_but .butBox .boxZi {
  margin-left: 20rpx;
  height: 160rpx;
  position: relative;
}

.hot_but .butBox .boxZi image {
  width: 25rpx;
  height: 25rpx;
  margin-left: 20rpx;
}

.hot_but .butBox .boxZi .ziSty {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot_but .butBox .boxZi .sty_co {
  width: 85%;
  height: 68rpx;
  line-height: 38rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #9a9a9a;
  margin: 10rpx 0 5rpx 0;
}

.hot_but .butBox .boxZi .ziFu {
  font-size: 24rpx;
  position: absolute;
  bottom: 5rpx;
  right: 0;
  color: #9a9a9a;
  line-height: 28rpx;
}

.informBut{
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  background:rgba(41,148,230,1);
  box-shadow:0px -5px 30px rgba(238,238,238,1);
  /* opacity: 0.5 */
}
.informBut .butZi{
  width: 50%;
  text-align: center;
  padding: 24rpx 0;
  background:rgba(39,210,140,1);
  display: flex;
  justify-content: center;
}
.informBut .butZi:nth-child(1){
  background:rgba(41,148,230,1);
}
.informBut .butZi image{
  width: 48rpx;
  height: 48rpx
}
.informBut .butZi text{
  display: block;
  line-height: 48rpx;
  color: #fff;
  margin-left: 20rpx
}