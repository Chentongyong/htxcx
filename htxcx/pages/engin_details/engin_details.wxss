.enginBox {
  padding: 40rpx;
  background-color: #fff;
}

.boxUp {
  padding: 20rpx 0;
  box-shadow: 0 0 20rpx #eee;
  border-radius: 5px;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.boxUp view {
  text-align: center;
}

.boxUp view.v_stle {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(254, 75, 75, 1);
  margin-top: 16rpx;
}

.boxTop {
  padding: 28rpx 0;
  display: flex;
  justify-content: space-between;
}

.boxTop image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 10rpx;
}

.boxTop .left {
  padding: 8rpx;
  border: 1px solid rgba(41, 148, 230, 1);
  font-size: 24rpx;
  font-family: PingFang SC;
  color: rgba(41, 148, 230, 1);
  border-radius: 5px;
}

.boxTop .right {
  display: flex;
  font-family: San Francisco Display;
}

.boxTop .right view:nth-child(1) {
  margin-right: 20rpx;
}

.boxTop .right text {
  font-size: 24rpx;
  color: rgba(154, 154, 154, 1);
}
.box_cen{
  margin-bottom: 100rpx
}
.box_cen image {
  width: 100%;
  height: 360rpx;
}

.box_cen .cenText {
  font-size: 32rpx;
  font-family: PingFang SC;
  line-height: 48rpx;
  color: rgba(51, 51, 51, 1);
  text-indent: 72rpx;
  letter-spacing: 4rpx;
}

.box_cen .cenBut {
  font-size: 24rpx;
  font-family: PingFang SC;
  color: rgba(154, 154, 154, 1);
  margin-top: 20rpx;
  text-align: right
}

.information{
  padding: 20rpx 40rpx 40rpx 40rpx;
  background: #fff;
  margin: 10rpx 0;
}
.information .inform_tit{
  font-size: 36rpx;
  color:rgba(51,51,51,1);
}
.information .inform_money{
  font-size:40rpx;
  font-weight: 600;
  color:rgba(254,75,75,1);
  padding: 12rpx 0 22rpx 0;
  border-bottom: 1px solid rgba(238,238,238,1);
}
.information .inform_map{
  font-size: 28rpx;
  color:rgba(154,154,154,1);
  margin-top: 12rpx
}
.informCen{
  width: 100%;
  background: #fff;
  margin-bottom: 96rpx
}
.informCen .cenTop{
  padding: 16rpx 0;
  font-size: 36rpx;
  color:rgba(51,51,51,1);
  text-align: center
}
.informBut{
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  background:rgba(41,148,230,1);
  box-shadow:0px -5px 30px rgba(238,238,238,1);
  /* opacity: 0.5 */
}
.informBut .butZi{
  width: 50%;
  text-align: center;
  padding: 24rpx 0;
  background:rgba(39,210,140,1);
  display: flex;
  justify-content: center;
}
.informBut .butZi:nth-child(1){
  background:rgba(41,148,230,1);
}
.informBut .butZi image{
  width: 48rpx;
  height: 48rpx
}
.informBut .butZi text{
  display: block;
  line-height: 48rpx;
  color: #fff;
  margin-left: 20rpx
}
