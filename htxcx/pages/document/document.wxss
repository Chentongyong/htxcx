image {
  width: 100%;
  height: 1200rpx;
}

.docum {
  padding: 40rpx 0;
  text-align: center;
}

.docum_top {
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.docum text {
  font-size: 50rpx;
  color: rgba(58, 169, 254, 1);
}

.hotspot {
  background: #fff;
}

.hot_but {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 40rpx 36rpx 40rpx;
  border-top: 2px solid #eee;
}

.hot_but .imgs1 {
  width: 30%;
  height: 160rpx;
}

.hot_but .butBox {
  width: 70%;
}

.hot_but .butBox .boxZi {
  margin-left: 20rpx;
  height: 160rpx;
  position: relative;
}

.hot_but .butBox .boxZi image {
  width: 25rpx;
  height: 25rpx;
  margin-left: 20rpx;
}

.hot_but .butBox .boxZi .ziSty {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot_but .butBox .boxZi .sty_co {
  width: 85%;
  height: 68rpx;
  line-height: 34rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #9a9a9a;
  margin: 10rpx 0 5rpx 0;
}

.hot_but .butBox .boxZi .ziFu {
  font-size: 24rpx;
  position: absolute;
  bottom: 5rpx;
  right: 0;
  color: #9a9a9a;
  line-height: 28rpx;
}

.informBut {
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(41, 148, 230, 1);
  box-sizing: 0px -5px 30px rgba(238, 238, 238, 1);
  /* opacity: 0.9; */
}

.informBut .butZi {
  width: 50%;
  text-align: center;
  padding: 24rpx 0;
  background: rgba(39, 210, 140, 1);
  display: flex;
  justify-content: center;
}

.informBut .butZi:nth-child(1) {
  background: rgba(41, 148, 230, 1);
}

.informBut .butZi image {
  width: 48rpx;
  height: 48rpx;
}

.informBut .butZi text {
  display: block;
  line-height: 48rpx;
  color: #fff;
  margin-left: 20rpx;
}

.scvBox {
  padding: 0 10rpx;
  display: flex;
  justify-content: space-between;
  white-space: nowrap;
  /* overflow: scroll; */
}

/* .scvBox::-webkit-scrollbar {
  display: none;
} */

.boxzi {
  width: 160rpx;
  /* height: 180rpx; */
  text-align: center;
  display: inline-block;
  /* margin: 0 13rpx; */
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.scvBox image {
  display: block;
  width: 160rpx;
  height: 180rpx;
}

.scvBox .text {
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  position: relative;
  bottom: 60rpx;
}
