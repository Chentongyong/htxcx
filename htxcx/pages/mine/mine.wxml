<view class="container" style="margin-bottom: 98rpx;">
  <view class="bgPic">
    <image src="../../images/bgpic.png" style="width:100%;height:100%"></image>
    <view class="welcome">欢迎来到清洗吧!</view>
    <image class="portrait" src="../../images/portrait.png"></image>
    <view class="set" bindtap='myset'>设置</view>
    <view class='bos' style='display:none'>
      <view class="phone">18023569542</view>
      <view class="type">{{grade}}</view>
    </view>
    <!-- 没有登录时判断 -->
    <view class="clickLogin" bindtap='login'>点击登录</view>
  </view>
  <!-- 可用金币 -->
  <view class="coin">
    <view class="left">
      <view class="money">可用金币</view>
      <view class="num">20</view>
    </view>
    <view class="line"></view>
    <view class="right" bindtap='integral'>
      <view class="integral">可用积分</view>
      <view class="num">88</view>
    </view>
    <view class="recharge" bindtap='recharge'>
      充值
      <image src="../../images/dollar.png"></image>
    </view>
  </view>
  <!-- 我的列表 -->
  <view class="mine-lists">
    <view class="lists-item" bindtap='memClick'>
      <view class="left">
        <image src="../../images/member.png"></image>
        会员升级
      </view>
      <view class="right">
        <image src="../../images/arrow.png"></image>
      </view>
    </view>
    <!-- 第二个人 -->
    <view class="lists-item" bindtap="myrelease">
      <view class="left">
        <image src="../../images/release.png"></image>
        我的发布
      </view>
      <view class="right">
        <image src="../../images/arrow.png"></image>
      </view>
    </view>
    <view class="lists-item" bindtap='sheet' bindtap="myproject">
      <view class="left">
        <image src="../../images/sheet.png"></image>
        我的抢单
      </view>
      <view class="right">
        <image src="../../images/arrow.png"></image>
      </view>
    </view>
    <view class="lists-item" bindtap="mybrowse">
      <view class="left">
        <image src="../../images/browse1.png"></image>
        我的浏览
      </view>
      <view class="right">
        <image src="../../images/arrow.png"></image>
      </view>
    </view>
    <view class="lists-item" bindtap="mycollection">
      <view class="left">
        <image src="../../images/collection1.png"></image>
        我的收藏
      </view>
      <view class="right">
        <image src="../../images/arrow.png"></image>
      </view>
    </view>
    <view class="lists-item" bindtap="feedback">
      <view class="left">
        <image src="../../images/opinion.png"></image>
        意见反馈
      </view>
      <view class="right">
        <image src="../../images/arrow.png"></image>
      </view>
    </view>
  </view>
  <!-- 底部导航栏 -->
  <tabbar tabbar="{{tabbar}}"></tabbar>
</view>