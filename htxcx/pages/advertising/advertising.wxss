.adverBox {
  width: 100%;
  background-color: #fff;
  margin-bottom: 100rpx
}

.adverBox image {
  width: 100%;
  height: 1100rpx
}

.information{
  padding: 20rpx 40rpx 40rpx 40rpx;
  background: #fff;
  margin: 10rpx 0;
}
.information .inform_tit{
  font-size: 36rpx;
  color:rgba(51,51,51,1);
}
.information .inform_money{
  font-size:40rpx;
  font-weight: 600;
  color:rgba(254,75,75,1);
  padding: 12rpx 0 22rpx 0;
  border-bottom: 1px solid rgba(238,238,238,1);
}
.information .inform_map{
  font-size: 28rpx;
  color:rgba(154,154,154,1);
  margin-top: 12rpx
}
.informCen{
  width: 100%;
  background: #fff;
  margin-bottom: 96rpx
}
.informCen .cenTop{
  padding: 16rpx 0;
  font-size: 36rpx;
  color:rgba(51,51,51,1);
  text-align: center
}
.informBut{
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  background:rgba(41,148,230,1);
  box-shadow:0px -5px 30px rgba(238,238,238,1);
  /* opacity: 0.5 */
}
.informBut .butZi{
  width: 50%;
  text-align: center;
  padding: 24rpx 0;
  background:rgba(39,210,140,1);
  display: flex;
  justify-content: center;
}
.informBut .butZi:nth-child(1){
  background:rgba(41,148,230,1);
}
.informBut .butZi image{
  width: 48rpx;
  height: 48rpx
}
.informBut .butZi text{
  display: block;
  line-height: 48rpx;
  color: #fff;
  margin-left: 20rpx
}