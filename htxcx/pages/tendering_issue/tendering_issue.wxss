.msBox .ms_top {
  padding: 28rpx 40rpx;
  background: #eee;
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

.msBox .ms_cen {
  padding: 20rpx 40rpx;
  height: 400rpx;
  background: #fff;
  position: relative;
}
.msBox .ms_cen textarea{
  width: 100%;
  height: 100%
}
.msBox .ms_cen view {
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(210, 210, 210, 1);
  position: absolute;
  top: 20rpx;
  left: 40rpx;
}

.hide {
  display: none;
}

.show {
  display: block;
}


.fuBox{
  position: fixed;
  width: 100%;
  height: 1000rpx;
  background: #f0f;
  bottom:0;
}