.issueBox {
  background: #eee;
}

.issueBox .issueZi {
  padding: 28rpx 40rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #eee;
}

.issueBox .issueZi .ziText {
  display: block;
  width: 160rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
  line-height: 50rpx;
  height: 50rpx;
}

.issueBox .issueZi .ziBox .text {
  line-height: 50rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(210, 210, 210, 1);
  position: absolute;
  top: 0;
  right: 0;
}

.issueBox .issueZi image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
  position: relative;
  top: 11rpx;
}

.issueBox .issueZi .ziBox {
  width: 500rpx;
  position: relative;
  height: 50rpx;
}

.issueBox .issueZi .ziBox input {
  font-size: 32rpx;
}

.type {
  display: flex;
  justify-content: space-between;
}

.type text {
  display: block;
  width: 84rpx;
  height: 46rpx;
  line-height: 46rpx;
  background: #fff;
  border: 2rpx solid #2994e6;
  color: #2994e6;
  text-align: center;
  border-radius: 3px;
  margin-right: 20rpx;
}

.type text.te_back {
  color: #fff;
  background: #2994e6;
}

