/* 定位，搜索，消息 */

.index-top {
  display: flex;
  background: #2994e6;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 68rpx;
  align-items: center;
}

.index-top .position {
  display: flex;
  /* align-items: center */
}

.index-top .position image {
  width: 32rpx;
  height: 30rpx;
  position: relative;
  top: 13rpx
}

.index-top .position view {
  width: 56rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  line-height: 56rpx;
  margin-left: 20rpx;
  color: #fff;
}

.index-top .search {
  margin-left: 20rpx;
  width: 516rpx;
  height: 56rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  align-items: center;
}

.index-top .search image {
  width: 32rpx;
  height: 32rpx;
  margin-left: 12rpx;
}

.index-top .search view {
  width: 144rpx;
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 24rpx;
  color: #d2d2d2;
  opacity: 1;
  margin-left: 12rpx;
}

.index-top .news {
  width: 48rpx;
  height: 48rpx;
  margin-left: 10rpx;
  position: relative;
}

.index-top .news image {
  width: 100%;
  height: 100%;
}

.index-top .news .num {
  position: absolute;
  top: -10rpx;
  right: -5rpx;
  width: 26rpx;
  height: 26rpx;
  text-align: center;
  background: rgba(254, 75, 75, 1);
  border-radius: 50%;
  font-size: 20rpx;
  font-family: San Francisco Display;
  line-height: 26rpx;
  color: #fff;
  opacity: 1;
}

.com_class {
  padding: 0 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  background: #fff;
}

.com_class .classBox {
  width: 25%;
  text-align: center;
  padding-top: 40rpx;
}

.com_class .classBox image {
  width: 96rpx;
  height: 96rpx;
}

.com_class .classBox .classTxt {
  text-align: center;
  margin-top: 8rpx;
  font-size: 28rpx;
}

.advertising {
  display: flex;
  height: 60rpx;
  padding: 20rpx 15rpx;
  border-radius: 35px;
  box-shadow: 1px 1px 6px rgba(154, 154, 154, 0.2);
}

.advertising .adver_left {
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  padding-right: 16rpx;
  border-right: 1px solid rgba(210, 210, 210, 1);
  color: #fe4b4b;
}

.advertising .adver_left image {
  width: 32rpx;
  height: 32rpx;
  display: block;
  margin: 0 auto;
}

.swiper_container {
  width: 540rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 16rpx;
  padding-right: 15rpx;
}

.swiper_item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
}

.compon .img_gg {
  width: 100%;
  height: 276rpx;
}

.recommend {
  height: 414rpx;
  background: #fff;
  margin-bottom: 10rpx;
}

.recommend .recomTop {
  width: 100%;
  padding: 36rpx 0;
  display: flex;
  line-height: 48rpx;
  justify-content: center;
  position: relative;
}

.recommend .recomTop .img1 {
  width: 48rpx;
  height: 48rpx;
  margin-right: 8rpx;
}

.recommend .recomTop .img2 {
  width: 20rpx;
  height: 20rpx;
  position: relative;
  top: 14rpx;
  margin-left: 10rpx;
}

.recommend .recomTop .left {
  font-weight: 600;
  color: #333;
  font-size: 36rpx;
}

.recommend .recomTop .right {
  color: #9a9a9a;
  font-size: 28rpx;
  position: absolute;
  bottom: 36rpx;
  right: 20rpx;
}

.recommend .recomTop .left, .recommend .recomTop .right {
  display: flex;
}

.recommend .swiper {
  width: 100%;
}

.recommend .swiper swiper-item {
  /* width: 100%; */
  display: flex;
  /* justify-content: space-around; */
}

.recommend .swiper swiper-item .itemBox {
  width: 33%;
  text-align: center;
}

.recommend .swiper image {
  height: 290rpx;
  width: 100%;
}

.recommend .swiper swiper-item {
  height: 290rpx;
}

.recommend .swiper {
  height: 290rpx;
  width: 100%;
}

.recommend .swiper image {
  height: 144rpx;
  width: 210rpx;
  margin-bottom: 28rpx;
}

.recommend .swiper .text {
  width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 auto;
  text-align: center
}

.hotspot {
  padding: 40rpx 20rpx;
  background: #fff;
}

.hotspot .hot_top {
  display: flex;
  justify-content: space-between;
  border: 1px solid rgba(41,148,230,1);
  border-radius: 3px;
}

.hotspot .hot_top .topZi {
  width: 50%;
  text-align: center;
  height: 60rpx;
  background: #fff;
  line-height: 60rpx;
  color: rgba(51, 51, 51, 1);
}

.hotspot .hot_top .topZi.zi_sty {
  background: rgba(41, 148, 230, 1);
  color: #fff;
}

.hot_but {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 0 36rpx 0;
  border-bottom: 2px solid #eee;
}

.hot_but .imgs1 {
  width: 30%;
  height: 160rpx;
}

.hot_but .butBox {
  width: 70%;
}

.hot_but .butBox .boxZi {
  margin-left: 20rpx;
  height: 160rpx;
  position: relative;
}

.hot_but .butBox .boxZi image {
  width: 25rpx;
  height: 25rpx;
  margin-left: 20rpx;
}

.hot_but .butBox .boxZi .ziSty {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot_but .butBox .boxZi .sty_co {
  width: 85%;
  height: 68rpx;
  line-height: 34rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #9a9a9a;
  margin: 10rpx 0 5rpx 0;
}

.hot_but .butBox .boxZi .ziFu {
  font-size: 24rpx;
  position: absolute;
  bottom: 5rpx;
  right: 0;
  color: #9a9a9a;
  line-height: 28rpx;
}

.more {
  width: 100%;
  padding: 18rpx 0;
  color: rgba(41, 148, 230, 1);
