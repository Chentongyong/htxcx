<view class='certifiBox'>
  <view class='cer_top'>
    <view style='padding-left:40rpx'>
      <view style='overflow: scroll;padding-bottom:44rpx'>
        <view class='cer_but'>
          <view wx:for='{{listBox}}' wx:key='index' data-index='{{index}}' class='butBox' bindtap='qhClick'>
            <image src='{{item.urlImg}}'></image>
            <text class="{{index==ind?'te_sty':''}}">{{item.title}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class='cerBut'>
    <view class='boxList'>
      <view wx:for='{{lists}}' wx:key='index' class='listBox' bindtap='djClick'>
        <image src='{{item.img}}'></image>
        <text>{{item.title}}</text>
      </view>
    </view>
  </view>
</view>