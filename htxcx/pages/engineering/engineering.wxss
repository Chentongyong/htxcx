.service {
  width: 100%;
  background: #eee;
  font-size: 32rpx;
  font-family: PingFang SC;
}

.service_top {
  padding: 20rpx 40rpx;
  background: #fff;
  margin-bottom: 10rpx;
  display: flex;
}

.service_top image {
  width: 140rpx;
  height: 160rpx;
  margin-right: 40rpx;
}

.service .servUp {
  display: flex;
  justify-content: space-between;
  color: rgba(51, 51, 51, 1);
}

.service .servUp .text1 {
  width: 65%;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 50rpx;
  font-size:32rpx;
  font-family: PingFang SC
}

.service .servUp .text2 {
  font-size: 24rpx;
  font-family: San Francisco Display;
  color: rgba(154, 154, 154, 1);
    line-height: 50rpx
}

.service .serv_cen {
  color: rgba(154, 154, 154, 1);
  margin-bottom: 20rpx;
}

.service .serv_but {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.service .serv_but image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
  position: relative;
  top: 4rpx;
}

.service .serv_but .text1 {
  font-size: 24rpx;
  color: rgba(41, 148, 230, 1);
  padding: 4rpx 10rpx;
  border: 1px solid rgba(41, 148, 230, 1);
  border-radius: 5px;
}

.service .serv_but .text2 {
  color: rgba(154, 154, 154, 1);
  font-size: 24rpx;
}
