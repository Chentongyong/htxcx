<view class='certifiBox'>
  <view class='cer_top'>
    <view style='padding:20rpx'>
      <view>
        <view class='cer_but'>
          <view wx:for='{{listBox}}' wx:key='index' class='butBox'>
            <image src='{{item.urlImg}}'></image>
            <text>{{item.title}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class='recoBox'>
    <view wx:for="{{dataList}}" wx:key="index" class='box' data-index='{{index}}' bindtap='details'>
      <view data-id='{{index}}' class="boxLeft {{index%2==1?'left':''}}" ></view>
      <view class='boxRight'>
        <image src='{{item.imgs}}'></image>
        <view class='rightZi'>
          <view class='right_top'>
            <view>
              <text class='text1'>{{item.title}}</text>
              <text class='text2'>{{item.gender}}</text>
            </view>
            <text class='text2' style='margin-top:18rpx'>{{item.time}}</text>
          </view>
          <view class='rightCen'>{{item.types}}</view>
          <view class='rightBut'>{{item.gs}}</view>
        </view>
      </view>
    </view>
  </view>
</view>