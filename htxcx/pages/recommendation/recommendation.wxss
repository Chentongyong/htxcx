.certifiBox {
  background-color: #eee;
  padding-bottom: 20rpx;
}

.certifiBox .cer_top {
  width: 100%;
  height: 100rpx;
  background-color: #2994e6;
}

.certifiBox .cer_but {
  width: 100%;
  display: flex;
  z-index: 300;
  justify-content: space-between;
  position: relative;
  top: 44rpx;
}

.certifiBox .cer_but .butBox {
  width: 160rpx;
  height: 88rpx;
  background-color: #fff;
  text-align: center;
  border-radius: 5px;
  box-shadow: 0px 0px 20rpx #ccc;
  display: flex;
  justify-content: center;
}

.certifiBox .cer_but .butBox:nth-child(1) {
  margin-left: 0;
}

.certifiBox .cer_but .butBox image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 24rpx;
  margin-right: 10rpx;
}

.certifiBox .cer_but .butBox text {
  font-size: 36rpx;
  display: block;
  line-height: 88rpx;
  font-family:PingFang SC;
  color: #9A9A9A 
}
.certifiBox .cer_but .butBox text.te_sty{
  color: #2994E6
}

