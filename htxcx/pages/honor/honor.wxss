.centerBox {
  background: #eee;
}

.hon_topbj {
  height: 60rpx;
  width: 100%;
  background: #2994e6;
}

.honTop {
  margin-top: -60rpx;
  padding: 0 40rpx;
  position: relative;
}

.honTop image {
  width: 100%;
  /* height: 600rpx */
}

.honTop .topFu {
  width: 580rpx;
  position: absolute;
  top: 60rpx;
  left: 50%;
  margin-left: -280rpx;
}

.honTop .topFu text {
  font-size: 32rpx;
  font-family: PingFang SC;
