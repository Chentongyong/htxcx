.city-box .box-zi {
  height: 48rpx;
  line-height: 48rpx;
  width: 120rpx;
  margin: 0 auto;
  border: 1px solid #d2d2d2;
  text-align: center;
  color: #333;
}
.city-box .activeBoxzi {
  height: 48rpx;
  line-height: 48rpx;
  width: 120rpx;
  margin: 0 auto;
  text-align: center;
   border: 2rpx solid #2994e6;
  color: #2994e6;
}
.cities-item {
  width: 120rpx;
  height: 48rpx;
  border: 2rpx solid #d2d2d2;
  opacity: 1;
  border-radius: 8rpx;
  text-align: center;
  line-height: 48rpx;
  margin-right: 40rpx;
  background: #fff;
  margin-top: 20rpx;
}

