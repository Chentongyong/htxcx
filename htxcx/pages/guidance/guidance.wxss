.recommend {
  background: #fff;
  margin-bottom: 10rpx;
}

.recommend .recomTop {
  width: 100%;
  padding: 36rpx 0;
  display: flex;
  line-height: 48rpx;
  justify-content: center;
  position: relative;
}

.recommend .recomTop .img1 {
  width: 48rpx;
  height: 48rpx;
  margin-right: 8rpx;
}

.recommend .recomTop .img2 {
  width: 20rpx;
  height: 20rpx;
  position: relative;
  top: 14rpx;
  margin-left: 10rpx;
}

.recommend .recomTop .left {
  font-weight: 600;
  color: #333;
  font-size: 36rpx;
}

.recommend .recomTop .right {
  color: #9a9a9a;
  font-size: 28rpx;
  position: absolute;
  bottom: 34rpx;
  right: 20rpx;
}

.recommend .recomTop .left, .recommend .recomTop .right {
  display: flex;
}

.recomBut {
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
}

.recomBut .butBox {
  width: 210rpx;
  margin-bottom: 48rpx;
}

.recomBut .butBox image {
  width: 100%;
  height: 268rpx;
}

.recomBut .butBox text {
  width: 100%;
  display: block;
  text-align: center;
  margin-top: 20rpx;
}

.advertising {
  display: flex;
  height: 60rpx;
  padding: 20rpx 15rpx;
  border-radius: 35px;
  box-shadow: 1px 1px 6px rgba(154, 154, 154, 0.2);
}

.advertising .adver_left {
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  padding-right: 16rpx;
  border-right: 1px solid rgba(210, 210, 210, 1);
  color: #fe4b4b;
}

.advertising .adver_left image {
  width: 32rpx;
  height: 32rpx;
  display: block;
  margin: 0 auto;
}

.swiper_container {
  width: 540rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 16rpx;
  padding-right: 15rpx;
}

.swiper_item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 24rpx;
}

.gcfwBox .gcfwTop {
  display: flex;
  justify-content: space-around;
  padding: 0 40rpx;
  border-top: 4rpx solid #eee;
  border-bottom: 4rpx solid #eee;
}

.gcfwBox .gcfwTop text {
  display: block;
  padding: 14rpx 0;
  border-bottom: 8rpx solid #fff;
  font-size: 28rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}

.gcfwBox .gcfwTop text.text_sty {
  color: #ff861d;
  font-size: 32rpx;
  font-weight: 600;
  border-bottom: 8rpx solid #ff861d;
}

.hot_but {
  display: flex;
  justify-content: space-between;
  padding: 32rpx 40rpx 36rpx 40rpx;
  border-bottom: 2px solid #eee;
}

.hot_but .imgs1 {
  width: 30%;
  height: 160rpx;
}

.hot_but .butBox {
  width: 70%;
}

.hot_but .butBox .boxZi {
  margin-left: 20rpx;
  height: 160rpx;
  position: relative;
}

.hot_but .butBox .boxZi image {
  width: 25rpx;
  height: 25rpx;
  margin-left: 20rpx;
}

.hot_but .butBox .boxZi .ziSty {
  font-size: 32rpx;
  line-height: 40rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot_but .butBox .boxZi .sty_co {
  width: 85%;
  height: 68rpx;
  line-height: 34rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #9a9a9a;
  margin: 10rpx 0 5rpx 0;
}

.hot_but .butBox .boxZi .ziFu {
  font-size: 24rpx;
  position: absolute;
  bottom: 5rpx;
  right: 0;
  color: #9a9a9a;
  line-height: 28rpx;
}

.informBut {
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(41, 148, 230, 1);
  box-shadow: 0px -5px 30px rgba(238, 238, 238, 1);
  /* opacity: 0.5 */
}

.informBut .butZi {
  width: 50%;
  text-align: center;
  padding: 24rpx 0;
  background: rgba(39, 210, 140, 1);
  display: flex;
  justify-content: center;
}

.informBut .butZi:nth-child(1) {
  background: rgba(41, 148, 230, 1);
}

.informBut .butZi image {
  width: 48rpx;
  height: 48rpx;
}

.informBut .butZi text {
  display: block;
  line-height: 48rpx;
  color: #fff;
  margin-left: 20rpx;
}
