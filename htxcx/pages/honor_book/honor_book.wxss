.certifiBox {
  background: #eee
}
.certifiBox .cer_top{
  width: 100%;
  height: 40rpx;
  background: #2994E6; 
}
.certifiBox .cerBut {
  padding: 0 20rpx;
  position: relative;
  top: -20rpx;
}

.certifiBox .cerBut .boxList {
  display: flex;
  justify-content: space-between;
  flex-flow: wrap;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 10rpx
}

.certifiBox .cerBut .boxList .listBox {
  width: 300rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.certifiBox .cerBut image {
  width: 100%;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.certifiBox .cerBut text {
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
}
