.recomBox {
  padding: 88rpx 40rpx 60rpx 40rpx;
  background: #fff;
}

.recomBox .recomTop {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 14rpx;
}

.recomBox .recomTop image {
  display: block;
  width: 200rpx;
  height: 280rpx;
  margin-right: 40rpx;
}

.recomBox .recomTop .right {
  width: 402rpx;
  height: 280rpx;
  border: 2px dashed #2994e6;
  border-radius: 5px;
}

.recomBox .recomTop .right.right_st {
  border: 2px dashed #ff861d;
}

.recomBox .recomTop .right image {
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 0;
}

.recomBox .recomTop .right .img1 {
  width: 48rpx;
  height: 58rpx;
  display: block;
  margin: -34rpx auto 0 auto;
}

.recomBox .recomTop .right .right_top {
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #333;
  font-weight: 600;
}

.recomBox .recomTop .right .right_top .text1 {
  font-size: 24rpx;
  font-weight: 400;
  margin-left: 20rpx;
  color: rgba(51, 51, 51, 1);
}

.recomBox .recomTop .right .rightList {
  padding: 0 20rpx;
  display: flex;
  font-size: 28rpx;
  text-align: left;
  line-height: 48rpx;
  margin-top: 4rpx;
}

.recomBox .recomTop .right .rightList .text2 {
  display: block;
  width: 260rpx;
  /* margin-left: 20rpx */
}

.titBox {
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(51, 51, 51, 1);
  text-indent: 64rpx;
  line-height: 50rpx;
}

.title {
  padding: 40rpx 0;
  font-size: 36rpx;
  text-align: center;
  text-indent: 0;
}

.informBut {
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(41, 148, 230, 1);
  box-shadow: 0px -5px 30px rgba(238, 238, 238, 1);
}

.informBut .butZi {
  width: 50%;
  text-align: center;
  padding: 24rpx 0;
  background: rgba(39, 210, 140, 1);
  display: flex;
  justify-content: center;
}

.informBut .butZi:nth-child(1) {
  background: rgba(41, 148, 230, 1);
}

.informBut .butZi image {
  width: 48rpx;
  height: 48rpx;
}

.informBut .butZi text {
  display: block;
  line-height: 48rpx;
  color: #fff;
  margin-left: 20rpx;
}
