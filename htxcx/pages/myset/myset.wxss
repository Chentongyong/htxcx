.placeholderClass {
  font-size: 32rpx;
  font-family: PingFang SC;
  color: #eee;
}

/* 提交发布 */
.tiBtn{
  /* width:100%; */
  height: 80rpx;
  line-height: 80rpx;
  padding-left:40rpx;
  font-size: 32rpx;
  background: #fff;
  margin-top:60rpx;
  font-family: PingFang SC;
}
.ziBox input {
  text-align: right;
  font-size: 32rpx;
  font-family: PingFang SC;
}
.cover{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  background: rgba(51, 51, 51, 0.5);
}
.title-box{
  width:670rpx;
  background: #fff;
  position: fixed;
  bottom:200rpx;
  left:50%;
  transform: translateX(-50%);
  border-radius: 32rpx;
}
.title-box .title{
  width: 100%;
  text-align: center;
  color:#D2D2D2;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom:1px solid #eee;
}
.confirm{
  width: 100%;
  text-align: center;
  color:#FE4B4B;
  font-size: 36rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.cancel{
  width:670rpx;
  height: 80rpx;
  line-height: 80rpx;
  background:#fff;
  color:#2994e6;
  font-size: 36rpx;
  position: fixed;
  bottom:100rpx;
  left:50%;
  text-align: center;
  transform: translateX(-50%);
  border-radius: 32rpx;
}